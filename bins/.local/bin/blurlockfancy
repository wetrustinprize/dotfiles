#!/bin/sh

# check if a i3lock process is already running
if pgrep -x i3lock >/dev/null; then
  exit
fi

# dpms
revert() {
  xset dpms 0 0 0
}
trap revert HUP INT TERM
xset +dpms dpms 5 5 5

# lock the screen
i3lock \
  -B 2 \
  -k \
  -S 1 \
  -n \
  --indicator \
  --ring-color=4C566A \
  --inside-color=2E3440 \
  --ringver-color=81A1C1 \
  --insidever-color=2E3440 \
  --ringwrong-color=BF616A \
  --insidewrong-color=2E3440 \
  --line-color=00000000 \
  --keyhl-color=A3BE8C \
  --bshl-color=BF616A \
  --separator-color=00000000 \
  --verif-color=81A1C1 \
  --wrong-color=BF616A \
  --modif-color=ECEFF4 \
  --time-color=ECEFF4 \
  --date-color=ECEFF4 \
  --pass-power-keys \
  --pass-media-keys \
  --pass-volume-keys

# reset dpms settings
revert